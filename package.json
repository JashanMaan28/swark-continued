{
    "name": "swark-continued",
    "displayName": "Swark Continued",
    "description": "Create architecture diagrams from code automatically using LLMs (Community-maintained fork of Swark)",
    "version": "1.5.0",
    "publisher": "JashanMaan28",
    "icon": "assets/logo/swark-icon.png",
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/JashanMaan28/swark-continued",
    "bugs": {
        "url": "https://github.com/JashanMaan28/swark-continued/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JashanMaan28/swark-continued.git"
    },
    "engines": {
        "vscode": "^1.91.0"
    },
    "extensionDependencies": [
        "github.copilot"
    ],
    "categories": [
        "Programming Languages",
        "Machine Learning",
        "Visualization",
        "AI"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "swark-continued.architecture",
                "title": "Swark Continued: Create Architecture Diagram"
            },
            {
                "command": "swark-continued.selectModel",
                "title": "Swark Continued: Select Language Model"
            }
        ],
        "configuration": {
            "title": "Swark Continued",
            "properties": {
                "swark-continued.maxFiles": {
                    "type": "number",
                    "default": 1000,
                    "description": "Max number of files to read. The number of files read is also affected by the LLM max token limit."
                },
                "swark-continued.fileExtensions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "py",
                        "js",
                        "jsx",
                        "ts",
                        "tsx",
                        "mjs",
                        "cjs",
                        "c",
                        "h",
                        "cpp",
                        "cc",
                        "cxx",
                        "hpp",
                        "java",
                        "cs",
                        "go",
                        "rb",
                        "php",
                        "rs",
                        "scala",
                        "swift",
                        "kt",
                        "kts",
                        "lua",
                        "dart"
                    ],
                    "description": "List of file extensions to include in search."
                },
                "swark-continued.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/.*",
                        "**/.*/*",
                        "**/node_modules/**"
                    ],
                    "description": "List of glob patterns to exclude from file search."
                },
                "swark-continued.languageModel": {
                    "type": "string",
                    "markdownDescription": "Language model family to use for diagram generation. Available models are dynamically fetched from GitHub Copilot.\n\n**Runtime Validation**: The extension validates this value at runtime against available GitHub Copilot models. If the configured model is unavailable, it will automatically fall back to the default model (`gpt-4o`) with a notification.\n\nUse the `Swark Continued: Select Language Model` command to see and select from all available models.",
                    "default": "gpt-4o"
                },
                "swark-continued.fixMermaidCycles": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically fix cycles in the generated Mermaid diagram to prevent rendering failures."
                }
            }
        },
        "keybindings": [
            {
                "command": "swark-continued.architecture",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/pako": "^2.0.3",
        "@types/vscode": "^1.91.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@vscode/extension-telemetry": "^0.9.7",
        "js-base64": "^3.7.7",
        "pako": "^2.1.0"
    }
}
